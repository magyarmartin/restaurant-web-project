<!DOCTYPE html>
<html>
    <head lang="hu-HU">
        <title>Something restaurant</title>
        <link rel="stylesheet" href="../CSS/master.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/paper/bootstrap.min.css">
        <meta charset="utf-8">
    </head>
    <body id="bootstrap-overrides">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><img id="navbarLogo" width="40px" src="http://www.designknock.com/wp-content/uploads/2013/03/Restaurant-Logo-1.jpg"></a>
                </div>
                <div>
                    <ul class="nav navbar-nav">
                        {{#each navs}}
                            <li><a href="{{link}}">{{name}}</a></li>
                        {{/each}}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{loginLink}}"><span class="glyphicon glyphicon-user"></span>{{loginOrName}}</a></li>
                        <li><a href="{{regLink}}">{{regOrLogout}}</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="login row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <h3 class="black">Rendelések</h3>
                <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Azonodító</th>
                        <th>Felhasználónév</th>
                        <th>Telefonszám</th>
                        <th>Rendelések</th>
                        <th>Cím</th>
                        <th>Végösszeg</th>
                        <th>Műveletek</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each orders}}
                          <tr>
                              <td>{{id}}</td>
                              <td>{{username}}</td>
                              <td>{{tel}}</td>
                              <td>{{foods}}</td>
                              <td>{{address}}</td>
                              <td>{{price}}</td>
                              <td>
<!--                                  <button class="inverse-button"><span class="glyphicon glyphicon-ok"></span></button> -->
                                  <button class="inverse-button" onclick="removeElement({{id}})"><span class="glyphicon glyphicon-remove"></span></button>
                              </td>
                          </tr>
                      {{/each}}
                    </tbody>
                  </table>
            </div>
            <div class="col-sm-1"></div>
        </div>
        <footer>
            <p>This is the footer so some text goes here..</p>
        </footer>
        <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
        <script src="JS/orders.js"></script>
    </body>
</html>